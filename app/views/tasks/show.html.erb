<h1><%= @task.title %></h1>
<div class="container">
<ul>

  <li><%= @task.details %></li>
  <li>complete:<%= check_box_tag 'completed', '1', @task.completed, :disabled => true %></li>

</ul>

<p class="btn"><%= link_to "Update", edit_task_url %></p>
<p class="btn"><%= link_to 'Delete', @task, method: :delete,  data: { confirm: "Are you sure you want to delete this task?" } %></p>

<p class="btn"><%= link_to "Back to List", root_path %></p>
</div>